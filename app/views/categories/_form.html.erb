<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :author_id, value: current_user.id %>
    <%= form.label :name, style:"display:none" %>
    <%= form.text_field :name, placeholder:"Enter Category Name" %>
  <div class="upload-container">
       <i class="fa-solid fa-2xl fa-circle-user" style="color: #7e7575;"></i>
        <span class="upload-placeholder">Upload Icon</span>
       <%= form.file_field :icon, accept: "image/*", class:"user-photo" %>
    <%= form.submit %>
  </div>
</div>
<% end %>
